<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head')%>
    <style>
      body {
        background-image: url("/images/backgrounds/background-3.png");
        background-repeat: no-repeat;
        background-size: cover;
      }

      .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
      }

      .card {
        width: 300px;
        height: 400px;
        background-color: #f2f2f2;
        border: 1px solid #ddd;
        box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.2);
        margin: 10px;
        display: grid;
        grid-template-rows: 1fr 2fr;
      }

      .card img {
        width: 100%;
        height: 70%;
        object-fit: cover;
      }

      .card-text {
        padding: 10px;
      }

      /* for the first row */
      .card:nth-child(3n + 1) {
        margin-right: 20px;
      }

      /* for the second row */
      .card:nth-child(2n + 1):not(:first-child) {
        margin-right: 20px;
      }
    </style>
</head>

<body>
  <%- include('./partials/header', {active: 'requests' }) %>
    <%if (cookies.userType !="admin" ) { %>
      <h1>Forms</h1>
      <div class="card-container">
        <div class="card">
          <img src=" " alt="Card 1" />
          <div class="card-text">
            <h2>Adoption Form</h2>
          </div>
          <a href="/requests/adoption-form">here</a>
        </div>
        <div class="card">
          <img src=" " alt="Card 2" />
          <div class="card-text">
            <h2>Volunteer Form</h2>
          </div>
          <a href="/requests/volunteer-form">here</a>
        </div>
        <div class="card">
          <img src=" " alt="Card 3" />
          <div class="card-text">
            <h2>Report a Rescue</h2>
          </div>
          <a href="/requests/rescue-form">here</a>
        </div>
        <div class="card">
          <img src=" " alt="Card 4" />
          <div class="card-text">
            <h2>Experience Form</h2>
          </div>
          <a href="/requests/experience-form">here</a>
        </div>
        <div class="card">
          <img src=" " alt="Card 5" />
          <div class="card-text">
            <h2>Handover Form</h2>
          </div>
          <a href="/requests/handover-form">here</a>
        </div>
      </div>
      <% } else {%>
        <h2>Requests status</h2>
        <h4>adoption requests:</h4>
        <div id="adopt"></div>
        <h4>handover requests:</h4>
        <div id="handover"></div>
        <h4>rescue requests:</h4>
        <div id="rescue"></div>
        <h4>volunteer requests:</h4>
        <div id="volunteer"></div>
        <% } %>
        <%- include("../public/scripts/apiController.ejs")%>
          <%- include("../public/scripts/requests.ejs")%>
</body>

</html>