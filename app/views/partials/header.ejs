<header>
  <link href="/stylesheets/header.css" rel="stylesheet" />
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <a class="navbar-brand" href="/">
      <img src="/public/paws-stripes-logo.svg" class="logo d-inline-block align-top" alt="logo">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav justify-content-center mx-auto">
        <li class="nav-item <%= active === 'who' ? 'active-item' : '' %>">
          <a class="nav-link" href="/">Who Are We?</a>
        </li>
        <li class="nav-item <%= active === 'pets' ? 'active-item' : '' %>">
          <a class="nav-link" href="/meet-our-pets">Meet Our Pets!</a>
        </li>
        <li class="nav-item <%= active === 'requests' ? 'active-item' : '' %>">
          <a class="nav-link" href="/requests">Requests</a>
        </li>
        <li class="nav-item <%= active === 'experiences' ? 'active-item' : '' %>">
          <a class="nav-link" href="/experiences">Adoption Experiences</a>
        </li>
        <% if (!cookies || user.type !="admin" ) { %>
          <li class="nav-item <%= active === 'rescue' ? 'active-item' : '' %>">
            <a class="nav-link red-word" href="/requests/rescue-form">Report a Rescue</a>
          </li>
          <li class="nav-item <%= active === 'faqs' ? 'active-item' : '' %>">
            <a class="nav-link" href="/faqs">FAQs</a>
          </li>
        <% } %>
        <% if (cookies) { %>
          <li class="nav-item ml-auto">
            <a class="nav-link" href="/account">
              <img class="login-img" src="/images/icons/account.svg" alt="Account"> Account
            </a>
          </li>
        <% } else { %>
          <li class="nav-item ml-auto login">
            <a class="nav-link" href="/login">
              <img class="login-img" src="/images/icons/login.svg" alt="Login"> Login
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </nav>
  
</header>
