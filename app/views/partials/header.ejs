<header>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link href="/stylesheets/header.css" rel="stylesheet" />

  <nav class="navbar navbar-expand-sm fixed-top">
    <div class="container-fluid row">
      <div class="col-2 mx-3">
        <a class="navbar-brand" href="#">
          <img src="/paws-stripes-logo.svg" class="logo" alt="logo">
        </a>
      </div>
      <div class="col-1">
        <button class="navbar-toggler login-img" type="button" data-bs-toggle="collapse"
          data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
      <div class="col-6 mt-1 mx-5">
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item <%= active === 'who' ? 'active-item' : '' %> px-2">
              <a class="nav-link" href="/">
                Who Are We?
              </a>
            </li>
            <li class="nav-item <%= active === 'pets' ? 'active-item' : '' %> px-2">
              <a class="nav-link" href="/meet-our-pets">Meet Our Pets!</a>
            </li>
            <li class="nav-item <%= active === 'requests' ? 'active-item' : '' %> px-2">
              <a class="nav-link" href="/requests">Requests</a>
            </li>
            <li class="nav-item <%= active === 'experiences' ? 'active-item' : '' %> px-2">
              <a class="nav-link" href="/experiences">Adoption Experiences</a>
            </li>
            <% if (!cookies || user.type !="admin" ) { %>
              <li class="nav-item <%= active === 'rescue' ? 'active-item' : '' %> px-2">
                <a class="nav-link red-word" href="/requests/rescue-form">Report a Rescue</a>
              </li>
              <li class="nav-item <%= active === 'faqs' ? 'active-item' : '' %> px-2">
                <a class="nav-link" href="/faqs">FAQs</a>
              </li>
          </ul>
          <% } %>
        </div>
      </div>
      <div class="col-3">

        <% if (cookies) { %>
          <div class="row">
            <div class="col-4">
          <a href="/account">
            <img class="login-img" src="/images/icons/account.svg" alt="Account">
          </a>
        </div>
        <div class="col-8">
          <form method="POST" action="/api/user/logout">
            <button class="button" type="submit" style="background-color:rgb(237, 95, 95)">Logout</button>
          </form>
        </div>
        </div>
          <% } else { %>
            <a href="/login">
              <button class="btn btn-outline-secondary rounded login-button" style="background-color: rgba(212, 170, 137, 1); color: #fff;"">Login</button>
            </a>
            <% } %>

      </div>
  </nav>

</header>