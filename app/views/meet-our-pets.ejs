<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head')%>
    <style>
      body {
        background-image: url("/images/backgrounds/background-4.png");
        background-repeat: no-repeat;
        background-size: cover;
      }

      .card {
        width: 300px;
        height: 400px;
        background-color: #f2f2f2;
        border: 1px solid #ddd;
        box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.2);
        margin: 10px;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-gap: 20px;
      }

      .card img {
        width: 100%;
        height: 70%;
        object-fit: cover;
      }

      .card-text {
        padding: 10px;
      }
    </style>
</head>

<body>
  <%- include('./partials/header', {active: 'pets' }) %>
    <h1>Meet Our Family</h1>
    <% if (cookies.userType==="admin" ) { %>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
        add pet
      </button>
      <% } %>
        <div id="cards-container" class="grid">
        </div>
        <div class="modal" id="myModal">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Add Pet</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <form action="/api/pets" method="post">
                  <label for="name"><b>pet name:</b></label><br>
                  <input type="text" name="name" required /><br>
                  <label for="type"><b>pet type:</b></label><br>
                  <input type="text" name="type" required /><br>
                  <label for="breed"><b>pet breed:</b></label><br>
                  <input type="text" name="breed" required /><br>
                  <label for="age"><b>pet age:</b></label><br>
                  <input type="text" name="age" required /><br>
                  <label for="personality"><b>pet personality:</b></label><br>
                  <input type="text" name="personality" required /><br>
                  <button type="submit" class="sign-in-button">submit</button>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">cancel</button>
              </div>
            </div>
          </div>
        </div>
        <script src="/scripts/apiController.js"></script>
        <%- include('../public/scripts/pets.ejs')%>
</body>

</html>