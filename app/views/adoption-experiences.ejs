<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head')%>
    <style>
      body {
        background-image: url("/images/backgrounds/background-4.png");
        background-repeat: no-repeat;
        background-size: cover;
      }

      .card {
        width: 200px;
        height: 300px;
        background-color: #f2f2f2;
        border: 1px solid #ddd;
        box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.2);
        margin: 10px;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-gap: 20px;
      }

      .card img {
        width: 100%;
        height: 70%;
        object-fit: cover;
      }

      .card-text {
        padding: 10px;
      }
    </style>
</head>

<body>
  <%- include('./partials/header', {active: 'experiences' }) %>
    <h1>Adoption Experiences</h1>
    <% if (cookies.isAuthenticated && cookies.userType !="admin" ) { %>
      <button onclick="displayExperiences('', false)">all experiences</button>
      <!-- cookies -->
      <button onclick="displayExperiences('<%=cookies.userID%>', true)">my experiences</button>
      <a href="/requests/experience-form"><button>add</button></a>
      <% } %>
        <div id="cards-container" class="grid"></div>
        <%- include("../public/scripts/experiences.ejs") %>
   
</body>

</html>